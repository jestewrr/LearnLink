<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnLink</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/learnlink.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnLink.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var isAdmin = User.IsInRole("SuperAdmin");
        var isContributor = User.IsInRole("Contributor");
        var isManager = User.IsInRole("Manager");
        var isStudent = User.IsInRole("Student");
        var canUpload = isAdmin || isContributor || isManager;
        var canAdmin = isAdmin;
        var canReport = isAdmin || isContributor || isManager;
        var userEmail = User.Identity?.Name ?? "User";
        var userInitials = userEmail.Length >= 2 ? userEmail[..2].ToUpper() : "U";
        var userRole = isAdmin ? "Super Admin" : isManager ? "Manager" : isContributor ? "Contributor" : "Student";
    }
    @if (ViewData["HideLayout"] is true)
    {
        @RenderBody()
    }
    else
    {
        <!-- Sidebar -->
        <aside class="ll-sidebar" id="sidebar">
            <div class="ll-sidebar-brand">
                <div class="brand-icon">
                    <img src="~/images/Learnlink.png" alt="LearnLink" />
                </div>
                <span class="brand-text"><span class="fw-bold">Learn</span><span style="color: var(--ll-accent);">Link</span></span>
            </div>

            <nav class="ll-sidebar-nav">
                <!-- Main Navigation -->
                <div class="ll-nav-section">
                    <div class="ll-nav-section-title">Main Menu</div>
                    @if (!isStudent && !isContributor)
                    {
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Dashboard", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="bi bi-grid-1x2"></i>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </div>
                    }
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Repository", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Repository" ? "active" : "")">
                            <i class="bi bi-folder2-open"></i>
                            <span class="nav-text">Knowledge Repository</span>
                        </a>
                    </div>
                </div>

                <!-- Content Management (Contributors, Manager & Admin) -->
                @if (canUpload)
                {
                <div class="ll-nav-section">
                    <div class="ll-nav-section-title">Content Management</div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("MyUploads", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "MyUploads" ? "active" : "")">
                            <i class="bi bi-file-earmark-check"></i>
                            <span class="nav-text">My Uploads</span>
                        </a>
                    </div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Policies", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Policies" ? "active" : "")">
                            <i class="bi bi-shield-check"></i>
                            <span class="nav-text">Policies & Procedures</span>
                        </a>
                    </div>
                </div>
                }

                <!-- Learning -->
                <div class="ll-nav-section">
                    <div class="ll-nav-section-title">Learning</div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("LessonsLearned", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "LessonsLearned" ? "active" : "")">
                            <i class="bi bi-lightbulb"></i>
                            <span class="nav-text">Lessons Learned</span>
                        </a>
                    </div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("BestPractices", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "BestPractices" ? "active" : "")">
                            <i class="bi bi-star"></i>
                            <span class="nav-text">Best Practices</span>
                        </a>
                    </div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("ReadingHistory", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "ReadingHistory" ? "active" : "")">
                            <i class="bi bi-clock-history"></i>
                            <span class="nav-text">Reading History</span>
                        </a>
                    </div>
                </div>

                <!-- Community -->
                <div class="ll-nav-section">
                    <div class="ll-nav-section-title">Community</div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("KnowledgePortal", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "KnowledgePortal" ? "active" : "")">
                            <i class="bi bi-chat-square-text"></i>
                            <span class="nav-text">Knowledge Sharing</span>
                        </a>
                    </div>
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Discussions", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Discussions" ? "active" : "")">
                            <i class="bi bi-people"></i>
                            <span class="nav-text">Discussions</span>
                        </a>
                    </div>
                </div>

                <!-- Administration (Admin only) / Reports (Admin, Contributor, Manager) -->
                @if (canAdmin || canReport)
                {
                <div class="ll-nav-section">
                    <div class="ll-nav-section-title">Administration</div>
                    @if (canAdmin)
                    {
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Users", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Users" ? "active" : "")">
                            <i class="bi bi-person-gear"></i>
                            <span class="nav-text">User Management</span>
                        </a>
                    </div>

                    }
                    @if (canReport)
                    {
                    <div class="ll-nav-item">
                        <a href="@Url.Action("Reports", "Home")" class="ll-nav-link @(ViewData["ActivePage"]?.ToString() == "Reports" ? "active" : "")">
                            <i class="bi bi-bar-chart-line"></i>
                            <span class="nav-text">Reports & Analytics</span>
                        </a>
                    </div>
                    }
                </div>
                }
            </nav>

        </aside>
        <!-- Sidebar Overlay (mobile) -->
        <div class="ll-sidebar-overlay" id="sidebarOverlay"></div>
        <main class="ll-main">
            <!-- Header -->
            <header class="ll-header">
                <div class="ll-header-left">
                    <button class="ll-sidebar-toggle" id="sidebarToggle" title="Toggle Sidebar">
                        <i class="bi bi-list fs-5"></i>
                    </button>
                    <form class="ll-search-box" action="@Url.Action("Search", "Home")" method="get">
                        <i class="bi bi-search"></i>
                        <input type="text" name="q" placeholder="Search resources, discussions, users..." class="form-control">
                        <button type="submit" class="d-none"></button>
                    </form>
                </div>
                <div class="ll-header-right">
                    <div class="dropdown me-2">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="quickActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-lightning-charge me-1"></i> Quick Actions
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="quickActionsDropdown">
                            @if (canUpload)
                            {
                            <li><a class="dropdown-item" href="@Url.Action("Upload", "Home")"><i class="bi bi-cloud-arrow-up me-2"></i>Upload Resource</a></li>
                            }
                            <li><a class="dropdown-item" href="@Url.Action("Repository", "Home")"><i class="bi bi-folder2-open me-2"></i>Browse Resources</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("LessonsLearned", "Home")"><i class="bi bi-lightbulb me-2"></i>Lessons</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("KnowledgePortal", "Home")"><i class="bi bi-chat-square-text me-2"></i>Discuss</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("BestPractices", "Home")"><i class="bi bi-star me-2"></i>Best Practices</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ReadingHistory", "Home")"><i class="bi bi-clock-history me-2"></i>History</a></li>
                        </ul>
                    </div>
                    <!-- Notifications Dropdown -->
                    <div class="dropdown">
                        <button class="ll-header-btn" title="Notifications" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" id="notificationBellBtn">
                            <i class="bi bi-bell"></i>
                            <span class="notification-badge" id="notifBadge" style="display:none;">0</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end p-0" style="width: 340px; max-height: 420px; overflow: hidden;">
                            <div class="px-3 py-2 border-bottom d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 fw-bold">Notifications</h6>
                                <a href="#" class="small text-primary text-decoration-none" id="markAllReadBtn">Mark all read</a>
                            </div>
                            <div style="max-height: 320px; overflow-y: auto;" id="notificationList">
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-bell-slash display-6 d-block mb-2"></i>
                                    <span class="small">Loading notifications...</span>
                                </div>
                            </div>
                            <div class="px-3 py-2 border-top text-center">
                                <span class="small text-muted fw-medium" id="notifSummary">No notifications</span>
                            </div>
                        </div>
                    </div>



                    <div class="dropdown">
                        <div class="ll-user-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="avatar">@userInitials</div>
                            <i class="bi bi-chevron-down small"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li class="px-3 py-2">
                                <div class="fw-bold small">@userEmail</div>
                                <div class="text-muted small">@userRole</div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Home")"><i class="bi bi-person me-2"></i>My Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="Logout" asp-controller="Home" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="ll-content">
                @RenderBody()
            </div>
        </main>
    }

    <div class="modal fade" id="llTableDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Details</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function() {
            var sidebar = document.getElementById('sidebar');
            var toggle = document.getElementById('sidebarToggle');
            var overlay = document.getElementById('sidebarOverlay');
            
            if (!toggle || !sidebar) return;
            
            function isMobile() {
                return window.innerWidth < 992;
            }
            
            function closeMobileSidebar() {
                sidebar.classList.remove('show');
                if (overlay) {
                    overlay.classList.remove('active');
                }
                document.body.style.overflow = '';
            }
            
            toggle.addEventListener('click', function() {
                if (isMobile()) {
                    // Mobile: toggle show class + overlay
                    var isShowing = sidebar.classList.toggle('show');
                    if (overlay) {
                        if (isShowing) {
                            overlay.classList.add('active');
                            document.body.style.overflow = 'hidden';
                        } else {
                            overlay.classList.remove('active');
                            document.body.style.overflow = '';
                        }
                    }
                } else {
                    // Desktop: toggle collapsed
                    sidebar.classList.toggle('collapsed');
                }
            });
            
            // Click overlay to close
            if (overlay) {
                overlay.addEventListener('click', closeMobileSidebar);
            }
            
            // Close sidebar on resize to desktop
            window.addEventListener('resize', function() {
                if (!isMobile()) {
                    sidebar.classList.remove('show');
                    if (overlay) overlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        })();
    </script>
    <script>
        // ===== Notifications System =====
        (function() {
            var badge = document.getElementById('notifBadge');
            var list = document.getElementById('notificationList');
            var summary = document.getElementById('notifSummary');
            var markAllBtn = document.getElementById('markAllReadBtn');
            var bellBtn = document.getElementById('notificationBellBtn');

            if (!badge || !list) return;

            function loadNotifications() {
                fetch('/Home/GetNotifications')
                    .then(r => r.json())
                    .then(data => {
                        // Update badge
                        if (data.unreadCount > 0) {
                            badge.textContent = data.unreadCount > 99 ? '99+' : data.unreadCount;
                            badge.style.display = '';
                        } else {
                            badge.style.display = 'none';
                        }

                        // Render notifications
                        if (data.notifications.length === 0) {
                            list.innerHTML = '<div class="text-center py-4 text-muted">' +
                                '<i class="bi bi-bell-slash display-6 d-block mb-2"></i>' +
                                '<span class="small">No notifications yet</span></div>';
                            summary.textContent = 'No notifications';
                            return;
                        }

                        var html = '';
                        data.notifications.forEach(function(n) {
                            var readStyle = n.isRead ? '' : 'background: #f8fafc;';
                            var unreadDot = n.isRead ? '' : '<span style="width:6px;height:6px;background:#3b82f6;border-radius:50%;flex-shrink:0;margin-top:6px;"></span>';
                            html += '<a href="' + (n.link || '#') + '" class="dropdown-item px-3 py-2 border-bottom notif-item" data-id="' + n.id + '" style="white-space: normal;' + readStyle + '">' +
                                '<div class="d-flex gap-2">' +
                                '<div style="width:36px;height:36px;background:' + n.iconBg + ';border-radius:50%;display:flex;align-items:center;justify-content:center;flex-shrink:0;">' +
                                '<i class="bi ' + n.icon + ' small"></i></div>' +
                                '<div class="flex-fill">' +
                                '<div class="small fw-medium d-flex align-items-center gap-2">' + n.title + unreadDot + '</div>' +
                                '<div class="small text-muted">' + n.message + '</div>' +
                                '<div class="small text-primary mt-1"><i class="bi bi-clock me-1"></i>' + n.timeAgo + '</div>' +
                                '</div></div></a>';
                        });
                        list.innerHTML = html;

                        summary.textContent = data.unreadCount > 0
                            ? data.unreadCount + ' unread notification' + (data.unreadCount > 1 ? 's' : '')
                            : 'All caught up!';

                        // Click handler for individual notifications
                        list.querySelectorAll('.notif-item').forEach(function(item) {
                            item.addEventListener('click', function() {
                                var nid = this.getAttribute('data-id');
                                fetch('/Home/MarkNotificationRead?id=' + nid, { method: 'POST' });
                            });
                        });
                    })
                    .catch(function() {
                        list.innerHTML = '<div class="text-center py-4 text-muted">' +
                            '<i class="bi bi-bell-slash display-6 d-block mb-2"></i>' +
                            '<span class="small">No notifications yet</span></div>';
                        badge.style.display = 'none';
                    });
            }

            // Mark all as read
            if (markAllBtn) {
                markAllBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    fetch('/Home/MarkAllNotificationsRead', { method: 'POST' })
                        .then(function() { loadNotifications(); });
                });
            }

            // Load on page load
            loadNotifications();

            // Refresh every 30 seconds
            setInterval(loadNotifications, 30000);
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
