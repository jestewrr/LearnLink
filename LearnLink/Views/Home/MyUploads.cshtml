@{
    ViewData["Title"] = "My Uploads";
    ViewData["ActivePage"] = "MyUploads";
}

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">My Uploads</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>My Uploads</span>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Upload", "Home")" class="ll-btn ll-btn-primary">
                <i class="bi bi-cloud-arrow-up"></i>
                Upload New
            </a>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="ll-stat-card">
            <div class="ll-stat-icon primary">
                <i class="bi bi-file-earmark"></i>
            </div>
            <div class="ll-stat-content">
                <div class="ll-stat-value">24</div>
                <div class="ll-stat-label">Total Uploads</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="ll-stat-card">
            <div class="ll-stat-icon success">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="ll-stat-content">
                <div class="ll-stat-value">18</div>
                <div class="ll-stat-label">Published</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="ll-stat-card">
            <div class="ll-stat-icon warning">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="ll-stat-content">
                <div class="ll-stat-value">4</div>
                <div class="ll-stat-label">Pending Review</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="ll-stat-card">
            <div class="ll-stat-icon info">
                <i class="bi bi-pencil-square"></i>
            </div>
            <div class="ll-stat-content">
                <div class="ll-stat-value">2</div>
                <div class="ll-stat-label">Drafts</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="ll-card mb-4">
    <div class="ll-card-body py-2">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <button class="ll-btn ll-btn-primary ll-btn-sm">All (24)</button>
            <button class="ll-btn ll-btn-outline ll-btn-sm">Published (18)</button>
            <button class="ll-btn ll-btn-outline ll-btn-sm">Pending (4)</button>
            <button class="ll-btn ll-btn-outline ll-btn-sm">Drafts (2)</button>
            <div class="ms-auto d-flex gap-2">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" class="ll-form-control ps-5" placeholder="Search my uploads..." style="width: 200px;">
                </div>
                <select class="ll-form-control ll-form-select" style="width: auto;">
                    <option>Most Recent</option>
                    <option>Most Views</option>
                    <option>Most Downloads</option>
                </select>
            </div>
        </div>
    </div>
</div>

