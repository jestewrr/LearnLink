<!-- Modules Section -->
<section id="modules" class="py-5" style="background: #f8fafc;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <span class="badge bg-primary bg-opacity-10 text-primary mb-3 px-3 py-2">System Modules</span>
