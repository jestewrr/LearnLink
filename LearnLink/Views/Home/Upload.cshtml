@{
    ViewData["Title"] = "Upload Materials";
    ViewData["ActivePage"] = "Upload";

    var recentUploads = ViewBag.RecentUploads as List<LearnLink.Models.ResourceViewModel> ?? new List<LearnLink.Models.ResourceViewModel>();
}

<style>
    /* Date picker styling */
    input[type="datetime-local"] {
        position: relative;
    }

    input[type="datetime-local"]::-webkit-calendar-picker-indicator {
        cursor: pointer;
        border-radius: 4px;
        margin-right: 4px;
        opacity: 0.6;
        filter: invert(0.8);
    }

    input[type="datetime-local"]::-webkit-calendar-picker-indicator:hover {
        opacity: 1;
    }

    #accessDurationDate {
        font-family: inherit;
    }

    #accessDurationDate:disabled {
        background-color: #f8f9fa;
        cursor: not-allowed;
        opacity: 0.6;
    }

    .access-duration-wrapper {
        position: relative;
    }

    #accessDurationHint {
        font-size: 0.875rem;
        font-weight: 500;
    }

    #accessDurationHint.text-success {
        color: #10b981 !important;
    }

    #accessDurationHint.text-info {
        color: #0ea5e9 !important;
    }
</style>

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">Upload Learning Materials</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>Upload Materials</span>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Upload Form -->
        <div class="ll-card">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Resource Information</h5>
            </div>
            <div class="ll-card-body">
                <form id="uploadForm">
                    <div id="formFeedback" class="alert alert-danger d-none" role="alert">Please fill in all required fields.</div>
                    <!-- File Upload -->
                    <div class="ll-form-group">
                        <label class="ll-form-label">Upload File</label>
                        <div class="ll-file-upload" id="dropZone">
                            <div class="ll-file-upload-icon">
                                <i class="bi bi-cloud-arrow-up"></i>
                            </div>
                            <div class="ll-file-upload-text">
                                <strong>Click to upload</strong> or drag and drop<br>
                                <span class="small">PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, MP4 (Max. 50MB)</span>
                            </div>
                            <input type="file" class="d-none" id="fileInput">
                        </div>
                    </div>

                    <!-- Basic Info -->
                    <div class="ll-form-group">
                        <label class="ll-form-label">Resource Title <span class="text-danger">*</span></label>
                        <input type="text" class="ll-form-control" id="resourceTitle" placeholder="Enter a descriptive title for the resource" required>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Subject <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select" id="resourceSubject" required>
                                    <option value="">Select subject</option>
                                    <option>Mathematics</option>
                                    <option>Science</option>
                                    <option>English</option>
                                    <option>Filipino</option>
                                    <option>Araling Panlipunan</option>
                                    <option>MAPEH</option>
                                    <option>TLE</option>
                                    <option>Values Education</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Grade Level <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select" id="resourceGrade" required>
                                    <option value="">Select grade level</option>
                                    <option>Grade 7</option>
                                    <option>Grade 8</option>
                                    <option>Grade 9</option>
                                    <option>Grade 10</option>
                                    <option>All Grades</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Resource Type <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select" id="resourceType" required>
                                    <option value="">Select type</option>
                                    <option>Reviewer / Study Guide</option>
                                    <option>Lesson Plan</option>
                                    <option>Activity Sheet</option>
                                    <option>Assessment / Quiz</option>
                                    <option>Presentation</option>
                                    <option>Video Tutorial</option>
                                    <option>Reading Material</option>
                                    <option>Reference Document</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Quarter</label>
                                <select class="ll-form-control ll-form-select">
                                    <option value="">Select quarter (optional)</option>
                                    <option>1st Quarter</option>
                                    <option>2nd Quarter</option>
                                    <option>3rd Quarter</option>
                                    <option>4th Quarter</option>
                                    <option>All Quarters</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="ll-form-group">
                        <label class="ll-form-label">Description <span class="text-danger">*</span></label>
                        <textarea class="ll-form-control" rows="4" id="resourceDesc" placeholder="Provide a detailed description of the resource content, learning objectives, and how it can be used..." required></textarea>
                    </div>

                    <div class="ll-form-group">
                        <label class="ll-form-label">Tags</label>
                        <input type="text" class="ll-form-control" placeholder="Enter tags separated by commas (e.g., algebra, equations, problem-solving)">
                        <small class="text-muted">Tags help users find your resource more easily</small>
                    </div>

                    <!-- Policy Settings -->
                    <hr class="my-4">
                    <h6 class="fw-bold mb-3"><i class="bi bi-shield-check me-2"></i>Access & Policy Settings</h6>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Access Level</label>
                                <select class="ll-form-control ll-form-select">
                                    <option>Public - All users can access</option>
                                    <option>Registered - Only logged in users</option>
                                    <option>Restricted - Selected users only</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Access Duration</label>
                                <div class="d-flex gap-2">
                                    <select class="ll-form-control ll-form-select" id="accessDurationType" style="flex: 0 0 150px;">
                                        <option value="unlimited">Unlimited</option>
                                        <option value="custom" selected>Custom Date</option>
                                    </select>
                                    <input type="datetime-local" class="ll-form-control" id="accessDurationDate" required>
                                </div>
                                <small class="text-muted d-block mt-2" id="accessDurationHint">Resources will be accessible until the selected date and time</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="allowDownload" checked>
                        <label class="form-check-label" for="allowDownload">Allow users to download this resource</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="allowComments" checked>
                        <label class="form-check-label" for="allowComments">Allow users to leave comments and ratings</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="trackHistory">
                        <label class="form-check-label" for="trackHistory">Enable version history tracking</label>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-end">
                        <button type="button" class="ll-btn ll-btn-outline" id="saveDraftBtn">Save as Draft</button>
                        <button type="button" class="ll-btn ll-btn-primary" id="uploadBtn">
                            <i class="bi bi-cloud-arrow-up"></i>
                            Upload Resource
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Recent Uploads -->
        <div class="ll-card">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Your Recent Uploads</h5>
            </div>
            <div class="ll-card-body" id="recentUploadsList">
                @for (int i = 0; i < recentUploads.Count; i++)
                {
                    var upload = recentUploads[i];
                    var statusClass = upload.Status switch
                    {
                        "Published" => "ll-badge-success",
                        "Pending" => "ll-badge-warning",
                        "Draft" => "ll-badge-info",
                        _ => "ll-badge-info"
                    };
                <div class="d-flex gap-3 @(i < recentUploads.Count - 1 ? "mb-3 pb-3 border-bottom" : "") recent-upload-item"
                     data-id="@i"
                     data-title="@upload.Title"
                     data-status="@upload.Status"
                     data-created="@upload.CreatedAt.ToString("o")"
                     data-icon-bg="@upload.IconBg"
                     data-icon-class="@upload.IconClass"
                     data-icon-color="@upload.IconColor">
                    <div style="width: 40px; height: 40px; background: @upload.IconBg; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi @upload.IconClass @upload.IconColor"></i>
                    </div>
                    <div class="flex-fill">
                        <div class="fw-medium small">@upload.Title</div>
                        <div class="small text-muted">@((DateTime.Now - upload.CreatedAt).Days switch { 0 => "Today", 1 => "Yesterday", var d => d + " days ago" })</div>
                    </div>
                    <div class="d-flex flex-column align-items-end gap-2">
                        <span class="ll-badge @statusClass">@upload.Status</span>
                        <div class="d-flex gap-1">
                            <button type="button" class="ll-btn ll-btn-outline ll-btn-sm edit-upload" data-id="@i" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="ll-btn ll-btn-outline ll-btn-sm delete-upload" data-id="@i" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="ll-card-body border-top">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small" id="recentUploadsSummary">Showing @recentUploads.Count of @recentUploads.Count uploads</div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled"><a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Upload Modal -->
<div class="modal fade" id="editUploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Upload</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="ll-form-group">
                    <label class="ll-form-label">Title</label>
                    <input type="text" class="ll-form-control" id="editUploadTitle">
                </div>
                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                {
                <div class="ll-form-group">
                    <label class="ll-form-label">Status</label>
                    <select class="ll-form-control ll-form-select" id="editUploadStatus">
                        <option>Published</option>
                        <option>Pending</option>
                        <option>Draft</option>
                    </select>
                </div>
                }
                else
                {
                <input type="hidden" id="editUploadStatus" />
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="ll-btn ll-btn-outline" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="ll-btn ll-btn-primary" id="saveEditUploadBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
    <div id="uploadToast" class="toast" role="alert">
        <div class="toast-header bg-success text-white">
            <i class="bi bi-check-circle me-2"></i>
            <strong class="me-auto">Success</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="uploadToastBody">Resource uploaded successfully!</div>
    </div>
</div>

@section Scripts {
    <script>
        // File upload drag and drop
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');
        const formFeedback = document.getElementById('formFeedback');
        const recentUploadsList = document.getElementById('recentUploadsList');
        const recentUploadsSummary = document.getElementById('recentUploadsSummary');
        const editUploadTitle = document.getElementById('editUploadTitle');
        const editUploadStatus = document.getElementById('editUploadStatus');
        const saveEditUploadBtn = document.getElementById('saveEditUploadBtn');
        const editUploadModal = new bootstrap.Modal(document.getElementById('editUploadModal'));
        const statusClasses = {
            Published: 'll-badge-success',
            Pending: 'll-badge-warning',
            Draft: 'll-badge-info'
        };
        let editUploadId = null;
        const uploads = Array.from(recentUploadsList.querySelectorAll('.recent-upload-item')).map((item, index) => ({
            id: parseInt(item.dataset.id, 10) || index + 1,
            title: item.dataset.title,
            status: item.dataset.status,
            createdAt: item.dataset.created,
            iconBg: item.dataset.iconBg,
            iconClass: item.dataset.iconClass,
            iconColor: item.dataset.iconColor
        }));
        let nextUploadId = uploads.length ? Math.max(...uploads.map(upload => upload.id)) + 1 : 1;

        dropZone.addEventListener('click', () => fileInput.click());

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#2563eb';
            dropZone.style.background = '#dbeafe';
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.style.borderColor = '#e2e8f0';
            dropZone.style.background = '';
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#e2e8f0';
            dropZone.style.background = '';
            const files = e.dataTransfer.files;
            if (files.length) {
                handleFile(files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFile(e.target.files[0]);
            }
        });

        function handleFile(file) {
            dropZone.innerHTML = `
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-file-earmark-check fs-2 text-success"></i>
                    <div class="text-start">
                        <div class="fw-medium">${file.name}</div>
                        <div class="small text-muted">${(file.size / 1024 / 1024).toFixed(2)} MB</div>
                    </div>
                    <button type="button" class="ms-auto ll-btn ll-btn-outline ll-btn-sm" onclick="resetUpload(event)">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `;
        }

        function resetUpload(event) {
            event.stopPropagation();
            dropZone.innerHTML = `
                <div class="ll-file-upload-icon">
                    <i class="bi bi-cloud-arrow-up"></i>
                </div>
                <div class="ll-file-upload-text">
                    <strong>Click to upload</strong> or drag and drop<br>
                    <span class="small">PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, MP4 (Max. 50MB)</span>
                </div>
            `;
            fileInput.value = '';
        }

        function showFormFeedback(message) {
            formFeedback.textContent = message;
            formFeedback.classList.remove('d-none');
        }

        function clearFormFeedback() {
            formFeedback.classList.add('d-none');
        }

        function getRelativeDate(isoDate) {
            const created = new Date(isoDate);
            const now = new Date();
            const diffDays = Math.floor((now - created) / (1000 * 60 * 60 * 24));
            if (diffDays <= 0) {
                return 'Today';
            }
            if (diffDays === 1) {
                return 'Yesterday';
            }
            return `${diffDays} days ago`;
        }

        function renderUploads() {
            if (!recentUploadsList) {
                return;
            }
            recentUploadsList.innerHTML = uploads.map((upload, index) => `
                <div class="d-flex gap-3 ${index < uploads.length - 1 ? 'mb-3 pb-3 border-bottom' : ''} recent-upload-item" data-id="${upload.id}">
                    <div style="width: 40px; height: 40px; background: ${upload.iconBg}; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi ${upload.iconClass} ${upload.iconColor}"></i>
                    </div>
                    <div class="flex-fill">
                        <div class="fw-medium small">${upload.title}</div>
                        <div class="small text-muted">${getRelativeDate(upload.createdAt)}</div>
                    </div>
                    <div class="d-flex flex-column align-items-end gap-2">
                        <span class="ll-badge ${statusClasses[upload.status] || 'll-badge-info'}">${upload.status}</span>
                        <div class="d-flex gap-1">
                            <button type="button" class="ll-btn ll-btn-outline ll-btn-sm edit-upload" data-id="${upload.id}" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="ll-btn ll-btn-outline ll-btn-sm delete-upload" data-id="${upload.id}" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');

            if (recentUploadsSummary) {
                recentUploadsSummary.textContent = `Showing ${uploads.length} of ${uploads.length} uploads`;
            }

            recentUploadsList.querySelectorAll('.edit-upload').forEach(button => {
                button.addEventListener('click', () => {
                    const upload = uploads.find(item => item.id === parseInt(button.dataset.id, 10));
                    if (!upload) {
                        return;
                    }
                    editUploadId = upload.id;
                    editUploadTitle.value = upload.title;
                    editUploadStatus.value = upload.status;
                    editUploadModal.show();
                });
            });

            recentUploadsList.querySelectorAll('.delete-upload').forEach(button => {
                button.addEventListener('click', () => {
                    const uploadId = parseInt(button.dataset.id, 10);
                    const indexToRemove = uploads.findIndex(item => item.id === uploadId);
                    if (indexToRemove > -1) {
                        uploads.splice(indexToRemove, 1);
                        renderUploads();
                    }
                });
            });
        }

        function validateRequiredFields() {
            const title = document.getElementById('resourceTitle').value.trim();
            const subject = document.getElementById('resourceSubject').value.trim();
            const grade = document.getElementById('resourceGrade').value.trim();
            const type = document.getElementById('resourceType').value.trim();
            const desc = document.getElementById('resourceDesc').value.trim();

            if (!title || !subject || !grade || !type || !desc) {
                showFormFeedback('Please fill in all required fields.');
                return null;
            }
            clearFormFeedback();
            return { title, subject, grade, type, desc };
        }

        function addUpload(title, status) {
            uploads.unshift({
                id: nextUploadId++,
                title,
                status,
                createdAt: new Date().toISOString(),
                iconBg: '#dbeafe',
                iconClass: 'bi-file-earmark-text',
                iconColor: 'text-primary'
            });
            renderUploads();
        }

        saveEditUploadBtn.addEventListener('click', () => {
            const upload = uploads.find(item => item.id === editUploadId);
            if (!upload) {
                return;
            }
            upload.title = editUploadTitle.value.trim() || upload.title;
            // Only update status if the status dropdown is a <select> (Manager/SuperAdmin)
            if (editUploadStatus.tagName === 'SELECT') {
                upload.status = editUploadStatus.value;
            }
            renderUploads();
            editUploadModal.hide();
        });

        document.getElementById('uploadBtn').addEventListener('click', function() {
            const fields = validateRequiredFields();
            if (!fields) {
                return;
            }
            addUpload(fields.title, 'Pending');
            document.getElementById('uploadToastBody').textContent = 'Resource uploaded successfully! It will be reviewed shortly.';
            var toast = new bootstrap.Toast(document.getElementById('uploadToast'));
            toast.show();
        });

        document.getElementById('saveDraftBtn').addEventListener('click', function() {
            const title = document.getElementById('resourceTitle').value.trim();
            if (!title) {
                showFormFeedback('Please fill in all required fields.');
                return;
            }
            clearFormFeedback();
            addUpload(title, 'Draft');
            document.getElementById('uploadToastBody').textContent = 'Resource saved as draft.';
            var toast = new bootstrap.Toast(document.getElementById('uploadToast'));
            toast.show();
        });

        document.querySelectorAll('#resourceTitle, #resourceSubject, #resourceGrade, #resourceType, #resourceDesc').forEach(input => {
            input.addEventListener('input', clearFormFeedback);
            input.addEventListener('change', clearFormFeedback);
        });

        // ==================== Access Duration Date Picker Logic ====================
        const accessDurationType = document.getElementById('accessDurationType');
        const accessDurationDate = document.getElementById('accessDurationDate');
        const accessDurationHint = document.getElementById('accessDurationHint');

        // Set default date to 30 days from now
        function setDefaultDate() {
            const now = new Date();
            const thirtyDaysLater = new Date(now.getTime() + 30 * 24 * 60 * 60 * 1000);
            const isoString = thirtyDaysLater.toISOString().slice(0, 16); // Format: YYYY-MM-DDTHH:mm
            accessDurationDate.value = isoString;
        }

        // Toggle date picker based on access duration type
        accessDurationType.addEventListener('change', function() {
            if (this.value === 'unlimited') {
                accessDurationDate.disabled = true;
                accessDurationDate.required = false;
                accessDurationHint.textContent = 'Resources will be accessible indefinitely';
                accessDurationHint.classList.add('text-success');
            } else {
                accessDurationDate.disabled = false;
                accessDurationDate.required = true;
                accessDurationHint.textContent = 'Resources will be accessible until the selected date and time';
                accessDurationHint.classList.remove('text-success');
            }
        });

        // Update hint when date changes
        accessDurationDate.addEventListener('change', function() {
            if (this.value) {
                const selectedDate = new Date(this.value);
                const formatted = selectedDate.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                accessDurationHint.textContent = `Access expires on: ${formatted}`;
                accessDurationHint.classList.add('text-info');
            }
        });

        // Initialize on page load
        setDefaultDate();

        renderUploads();
    </script>
}
