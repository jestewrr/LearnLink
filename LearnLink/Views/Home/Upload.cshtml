@{
    ViewData["Title"] = "Upload Materials";
    ViewData["ActivePage"] = "Upload";
}

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">Upload Learning Materials</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>Upload Materials</span>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Upload Form -->
        <div class="ll-card">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Resource Information</h5>
            </div>
            <div class="ll-card-body">
                <form>
                    <!-- File Upload -->
                    <div class="ll-form-group">
                        <label class="ll-form-label">Upload File</label>
                        <div class="ll-file-upload" id="dropZone">
                            <div class="ll-file-upload-icon">
                                <i class="bi bi-cloud-arrow-up"></i>
                            </div>
                            <div class="ll-file-upload-text">
                                <strong>Click to upload</strong> or drag and drop<br>
                                <span class="small">PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, MP4 (Max. 50MB)</span>
                            </div>
                            <input type="file" class="d-none" id="fileInput">
                        </div>
                    </div>

                    <!-- Basic Info -->
                    <div class="ll-form-group">
                        <label class="ll-form-label">Resource Title <span class="text-danger">*</span></label>
                        <input type="text" class="ll-form-control" placeholder="Enter a descriptive title for the resource">
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Subject <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select">
                                    <option value="">Select subject</option>
                                    <option>Mathematics</option>
                                    <option>Science</option>
                                    <option>English</option>
                                    <option>Filipino</option>
                                    <option>Araling Panlipunan</option>
                                    <option>MAPEH</option>
                                    <option>TLE</option>
                                    <option>Values Education</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Grade Level <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select">
                                    <option value="">Select grade level</option>
                                    <option>Grade 7</option>
                                    <option>Grade 8</option>
                                    <option>Grade 9</option>
                                    <option>Grade 10</option>
                                    <option>All Grades</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Resource Type <span class="text-danger">*</span></label>
                                <select class="ll-form-control ll-form-select">
                                    <option value="">Select type</option>
                                    <option>Reviewer / Study Guide</option>
                                    <option>Lesson Plan</option>
                                    <option>Activity Sheet</option>
                                    <option>Assessment / Quiz</option>
                                    <option>Presentation</option>
                                    <option>Video Tutorial</option>
                                    <option>Reading Material</option>
                                    <option>Reference Document</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Quarter</label>
                                <select class="ll-form-control ll-form-select">
                                    <option value="">Select quarter (optional)</option>
                                    <option>1st Quarter</option>
                                    <option>2nd Quarter</option>
                                    <option>3rd Quarter</option>
                                    <option>4th Quarter</option>
                                    <option>All Quarters</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="ll-form-group">
                        <label class="ll-form-label">Description <span class="text-danger">*</span></label>
                        <textarea class="ll-form-control" rows="4" placeholder="Provide a detailed description of the resource content, learning objectives, and how it can be used..."></textarea>
                    </div>

                    <div class="ll-form-group">
                        <label class="ll-form-label">Tags</label>
                        <input type="text" class="ll-form-control" placeholder="Enter tags separated by commas (e.g., algebra, equations, problem-solving)">
                        <small class="text-muted">Tags help users find your resource more easily</small>
                    </div>

                    <!-- Policy Settings -->
                    <hr class="my-4">
                    <h6 class="fw-bold mb-3"><i class="bi bi-shield-check me-2"></i>Access & Policy Settings</h6>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Access Level</label>
                                <select class="ll-form-control ll-form-select">
                                    <option>Public - All users can access</option>
                                    <option>Registered - Only logged in users</option>
                                    <option>Restricted - Selected users only</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="ll-form-group">
                                <label class="ll-form-label">Access Duration</label>
                                <select class="ll-form-control ll-form-select">
                                    <option>Unlimited Access</option>
                                    <option>7 Days</option>
                                    <option>30 Days</option>
                                    <option>90 Days</option>
                                    <option>Until End of School Year</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="allowDownload" checked>
                        <label class="form-check-label" for="allowDownload">Allow users to download this resource</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="allowComments" checked>
                        <label class="form-check-label" for="allowComments">Allow users to leave comments and ratings</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="trackHistory">
                        <label class="form-check-label" for="trackHistory">Enable version history tracking</label>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-end">
                        <button type="button" class="ll-btn ll-btn-outline">Save as Draft</button>
                        <button type="submit" class="ll-btn ll-btn-primary">
                            <i class="bi bi-cloud-arrow-up"></i>
                            Upload Resource
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Upload Guidelines -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Upload Guidelines</h5>
            </div>
            <div class="ll-card-body">
                <div class="d-flex gap-3 mb-3">
                    <div style="width: 32px; height: 32px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-check text-success"></i>
                    </div>
                    <div>
                        <div class="fw-medium small">Clear & Descriptive Title</div>
                        <div class="small text-muted">Help users find your resource easily</div>
                    </div>
                </div>
                <div class="d-flex gap-3 mb-3">
                    <div style="width: 32px; height: 32px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-check text-success"></i>
                    </div>
                    <div>
                        <div class="fw-medium small">Accurate Categorization</div>
                        <div class="small text-muted">Select the correct subject and grade</div>
                    </div>
                </div>
                <div class="d-flex gap-3 mb-3">
                    <div style="width: 32px; height: 32px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-check text-success"></i>
                    </div>
                    <div>
                        <div class="fw-medium small">Original Content</div>
                        <div class="small text-muted">Ensure you have rights to share</div>
                    </div>
                </div>
                <div class="d-flex gap-3">
                    <div style="width: 32px; height: 32px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-check text-success"></i>
                    </div>
                    <div>
                        <div class="fw-medium small">Quality Matters</div>
                        <div class="small text-muted">Review before uploading</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Supported Formats -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Supported Formats</h5>
            </div>
            <div class="ll-card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-file-earmark-pdf text-danger fs-4 d-block mb-1"></i>
                            <small>PDF</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-file-earmark-word text-primary fs-4 d-block mb-1"></i>
                            <small>DOC/DOCX</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-file-earmark-ppt text-warning fs-4 d-block mb-1"></i>
                            <small>PPT/PPTX</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-file-earmark-excel text-success fs-4 d-block mb-1"></i>
                            <small>XLS/XLSX</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-play-circle text-info fs-4 d-block mb-1"></i>
                            <small>MP4</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded text-center">
                            <i class="bi bi-file-earmark-image text-secondary fs-4 d-block mb-1"></i>
                            <small>Images</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Uploads -->
        <div class="ll-card">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Your Recent Uploads</h5>
            </div>
            <div class="ll-card-body">
                <div class="d-flex gap-3 mb-3 pb-3 border-bottom">
                    <div style="width: 40px; height: 40px; background: #fee2e2; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-file-earmark-pdf text-danger"></i>
                    </div>
                    <div class="flex-fill">
                        <div class="fw-medium small">Math Reviewer G8</div>
                        <div class="small text-muted">2 days ago</div>
                    </div>
                    <span class="ll-badge ll-badge-success">Published</span>
                </div>
                <div class="d-flex gap-3 mb-3 pb-3 border-bottom">
                    <div style="width: 40px; height: 40px; background: #dbeafe; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-file-earmark-word text-primary"></i>
                    </div>
                    <div class="flex-fill">
                        <div class="fw-medium small">English Study Guide</div>
                        <div class="small text-muted">5 days ago</div>
                    </div>
                    <span class="ll-badge ll-badge-warning">Pending</span>
                </div>
                <div class="d-flex gap-3">
                    <div style="width: 40px; height: 40px; background: #fef3c7; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-file-earmark-ppt text-warning"></i>
                    </div>
                    <div class="flex-fill">
                        <div class="fw-medium small">History Presentation</div>
                        <div class="small text-muted">1 week ago</div>
                    </div>
                    <span class="ll-badge ll-badge-success">Published</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // File upload drag and drop
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');

        dropZone.addEventListener('click', () => fileInput.click());

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#2563eb';
            dropZone.style.background = '#dbeafe';
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.style.borderColor = '#e2e8f0';
            dropZone.style.background = '';
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#e2e8f0';
            dropZone.style.background = '';
            const files = e.dataTransfer.files;
            if (files.length) {
                handleFile(files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFile(e.target.files[0]);
            }
        });

        function handleFile(file) {
            dropZone.innerHTML = `
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-file-earmark-check fs-2 text-success"></i>
                    <div class="text-start">
                        <div class="fw-medium">${file.name}</div>
                        <div class="small text-muted">${(file.size / 1024 / 1024).toFixed(2)} MB</div>
                    </div>
                    <button type="button" class="ms-auto ll-btn ll-btn-outline ll-btn-sm" onclick="resetUpload(event)">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `;
        }

        function resetUpload(event) {
            event.stopPropagation();
            dropZone.innerHTML = `
                <div class="ll-file-upload-icon">
                    <i class="bi bi-cloud-arrow-up"></i>
                </div>
                <div class="ll-file-upload-text">
                    <strong>Click to upload</strong> or drag and drop<br>
                    <span class="small">PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, MP4 (Max. 50MB)</span>
                </div>
            `;
            fileInput.value = '';
        }
    </script>
}
