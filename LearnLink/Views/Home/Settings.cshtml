@{
    ViewData["Title"] = "System Settings";
    ViewData["ActivePage"] = "Settings";
}

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">System Settings</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>System Settings</span>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Sidebar Navigation -->
    <div class="col-lg-3">
        <div class="ll-card">
            <div class="ll-card-body p-2">
                <nav class="nav flex-column">
                    <a class="nav-link active rounded px-3 py-2" href="#general" style="background: var(--ll-primary-light); color: var(--ll-primary);">
                        <i class="bi bi-gear me-2"></i>General Settings
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#appearance">
                        <i class="bi bi-palette me-2"></i>Appearance
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#notifications">
                        <i class="bi bi-bell me-2"></i>Notifications
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#security">
                        <i class="bi bi-shield-lock me-2"></i>Security
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#storage">
                        <i class="bi bi-hdd me-2"></i>Storage
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#integrations">
                        <i class="bi bi-plug me-2"></i>Integrations
                    </a>
                    <a class="nav-link rounded px-3 py-2 text-dark" href="#backup">
                        <i class="bi bi-cloud-download me-2"></i>Backup & Restore
                    </a>
                </nav>
            </div>
        </div>
    </div>

    <!-- Settings Content -->
    <div class="col-lg-9">
        <!-- General Settings -->
        <div class="ll-card mb-4" id="general">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-gear me-2"></i>General Settings</h5>
            </div>
            <div class="ll-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">System Name</label>
                            <input type="text" class="ll-form-control" value="LearnLink">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Institution Name</label>
                            <input type="text" class="ll-form-control" value="Sample Junior High School">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Admin Email</label>
                            <input type="email" class="ll-form-control" value="admin@learnlink.edu">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Time Zone</label>
                            <select class="ll-form-control ll-form-select">
                                <option selected>Asia/Manila (GMT+8)</option>
                                <option>Asia/Singapore (GMT+8)</option>
                                <option>Asia/Tokyo (GMT+9)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Date Format</label>
                            <select class="ll-form-control ll-form-select">
                                <option>MM/DD/YYYY</option>
                                <option selected>DD/MM/YYYY</option>
                                <option>YYYY-MM-DD</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Default Language</label>
                            <select class="ll-form-control ll-form-select">
                                <option selected>English</option>
                                <option>Filipino</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appearance -->
        <div class="ll-card mb-4" id="appearance">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-palette me-2"></i>Appearance</h5>
            </div>
            <div class="ll-card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="ll-form-label">Theme</label>
                        <div class="d-flex gap-3">
                            <div class="p-3 border rounded text-center" style="cursor: pointer; border-color: var(--ll-primary) !important;">
                                <i class="bi bi-sun fs-4 text-warning d-block mb-2"></i>
                                <small>Light</small>
                            </div>
                            <div class="p-3 border rounded text-center" style="cursor: pointer;">
                                <i class="bi bi-moon fs-4 text-dark d-block mb-2"></i>
                                <small>Dark</small>
                            </div>
                            <div class="p-3 border rounded text-center" style="cursor: pointer;">
                                <i class="bi bi-circle-half fs-4 text-secondary d-block mb-2"></i>
                                <small>Auto</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="ll-form-label">Primary Color</label>
                        <div class="d-flex gap-2">
                            <div style="width: 40px; height: 40px; background: #2563eb; border-radius: 8px; cursor: pointer; border: 3px solid var(--ll-dark);"></div>
                            <div style="width: 40px; height: 40px; background: #10b981; border-radius: 8px; cursor: pointer;"></div>
                            <div style="width: 40px; height: 40px; background: #8b5cf6; border-radius: 8px; cursor: pointer;"></div>
                            <div style="width: 40px; height: 40px; background: #ef4444; border-radius: 8px; cursor: pointer;"></div>
                            <div style="width: 40px; height: 40px; background: #f59e0b; border-radius: 8px; cursor: pointer;"></div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Logo</label>
                            <div class="d-flex align-items-center gap-3">
                                <div style="width: 64px; height: 64px; background: var(--ll-primary); border-radius: 14px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-book text-white fs-3"></i>
                                </div>
                                <div>
                                    <button class="ll-btn ll-btn-outline ll-btn-sm mb-1">Upload New Logo</button>
                                    <div class="small text-muted">Recommended: 128x128px, PNG or SVG</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications -->
        <div class="ll-card mb-4" id="notifications">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-bell me-2"></i>Notification Settings</h5>
            </div>
            <div class="ll-card-body">
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Email Notifications</h6>
                            <p class="text-muted small mb-0">Send email alerts to users</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">New Upload Alerts</h6>
                            <p class="text-muted small mb-0">Notify users when new resources are uploaded</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Discussion Replies</h6>
                            <p class="text-muted small mb-0">Notify when someone replies to discussions</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
                <div class="border rounded p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Weekly Digest</h6>
                            <p class="text-muted small mb-0">Send weekly summary of activities</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Storage -->
        <div class="ll-card mb-4" id="storage">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-hdd me-2"></i>Storage Settings</h5>
            </div>
            <div class="ll-card-body">
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Maximum File Size</label>
                            <select class="ll-form-control ll-form-select">
                                <option>10 MB</option>
                                <option>25 MB</option>
                                <option selected>50 MB</option>
                                <option>100 MB</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ll-form-group">
                            <label class="ll-form-label">Storage Quota per User</label>
                            <select class="ll-form-control ll-form-select">
                                <option>500 MB</option>
                                <option selected>1 GB</option>
                                <option>2 GB</option>
                                <option>5 GB</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <h6 class="fw-bold mb-3">Storage Usage</h6>
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="ll-progress flex-fill" style="height: 12px;">
                        <div class="ll-progress-bar primary" style="width: 65%;"></div>
                    </div>
                    <span class="fw-medium">65.2 GB / 100 GB</span>
                </div>
                <div class="row g-3 text-center">
                    <div class="col-4">
                        <div class="p-3 bg-light rounded">
                            <div class="fw-bold text-danger">32.4 GB</div>
                            <div class="small text-muted">PDF Files</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-light rounded">
                            <div class="fw-bold text-primary">18.7 GB</div>
                            <div class="small text-muted">Documents</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-light rounded">
                            <div class="fw-bold text-success">14.1 GB</div>
                            <div class="small text-muted">Videos</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="d-flex gap-2 justify-content-end">
            <button class="ll-btn ll-btn-outline">Cancel</button>
            <button class="ll-btn ll-btn-primary">
                <i class="bi bi-check-lg"></i>
                Save All Changes
            </button>
        </div>
    </div>
</div>
