@{
    ViewData["Title"] = "Policies & Procedures";
    ViewData["ActivePage"] = "Policies";
}

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">Policies & Procedures</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>Policies & Procedures</span>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Access Control Policies -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-shield-lock me-2 text-primary"></i>Access Control Policies</h5>
            </div>
            <div class="ll-card-body">
                <p class="text-muted mb-4">Configure who can access your uploaded resources and for how long.</p>
                
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="fw-bold mb-1">Default Access Level</h6>
                            <p class="text-muted small mb-0">Set the default access level for all new uploads</p>
                        </div>
                        <select class="ll-form-control ll-form-select" style="width: 200px;">
                            <option>Public - All users</option>
                            <option selected>Registered - Logged in users only</option>
                            <option>Restricted - Selected users only</option>
                        </select>
                    </div>
                </div>

                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="fw-bold mb-1">Access Duration</h6>
                            <p class="text-muted small mb-0">Set how long users can access your resources</p>
                        </div>
                        <select class="ll-form-control ll-form-select" style="width: 200px;">
                            <option selected>Unlimited</option>
                            <option>7 Days</option>
                            <option>30 Days</option>
                            <option>90 Days</option>
                            <option>Until End of School Year</option>
                        </select>
                    </div>
                </div>

                <div class="border rounded p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Allow Downloads</h6>
                            <p class="text-muted small mb-0">Allow users to download your resources</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="allowDownloads" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Version Control -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-clock-history me-2 text-success"></i>Version Control</h5>
            </div>
            <div class="ll-card-body">
                <p class="text-muted mb-4">Track changes and maintain version history of your educational materials.</p>

                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Enable Version History</h6>
                            <p class="text-muted small mb-0">Keep track of all changes made to your resources</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>

                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="fw-bold mb-1">Versions to Keep</h6>
                            <p class="text-muted small mb-0">Number of previous versions to retain</p>
                        </div>
                        <select class="ll-form-control ll-form-select" style="width: 150px;">
                            <option>Last 3</option>
                            <option selected>Last 5</option>
                            <option>Last 10</option>
                            <option>All Versions</option>
                        </select>
                    </div>
                </div>

                <div class="border rounded p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Require Version Notes</h6>
                            <p class="text-muted small mb-0">Require notes when uploading new versions</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Review -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title"><i class="bi bi-check2-circle me-2 text-warning"></i>Content Review Settings</h5>
            </div>
            <div class="ll-card-body">
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Allow Comments</h6>
                            <p class="text-muted small mb-0">Allow users to comment on your resources</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>

                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Allow Ratings</h6>
                            <p class="text-muted small mb-0">Allow users to rate your resources</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>

                <div class="border rounded p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-1">Moderate Comments</h6>
                            <p class="text-muted small mb-0">Review comments before they are published</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" style="width: 50px; height: 25px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <button class="ll-btn ll-btn-outline">Reset to Defaults</button>
            <button class="ll-btn ll-btn-primary">
                <i class="bi bi-check-lg"></i>
                Save Changes
            </button>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Version History for Selected Resource -->
        <div class="ll-card mb-4">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Recent Version History</h5>
            </div>
            <div class="ll-card-body">
                <div class="mb-3">
                    <select class="ll-form-control ll-form-select">
                        <option>Mathematics Grade 8 Reviewer</option>
                        <option>English Study Guide</option>
                        <option>Philippine History Presentation</option>
                    </select>
                </div>
                
                <div class="position-relative ps-4">
                    <div class="position-absolute start-0 top-0 bottom-0" style="width: 2px; background: #e2e8f0; left: 8px;"></div>
                    
                    <div class="mb-4 position-relative">
                        <div class="position-absolute" style="width: 16px; height: 16px; background: #22c55e; border-radius: 50%; left: -22px; top: 2px; border: 3px solid white;"></div>
                        <div class="fw-bold small">Version 3.0 (Current)</div>
                        <div class="small text-muted">Dec 15, 2024</div>
                        <div class="small text-muted">Updated practice problems</div>
                    </div>

                    <div class="mb-4 position-relative">
                        <div class="position-absolute" style="width: 16px; height: 16px; background: #94a3b8; border-radius: 50%; left: -22px; top: 2px; border: 3px solid white;"></div>
                        <div class="fw-medium small">Version 2.1</div>
                        <div class="small text-muted">Dec 10, 2024</div>
                        <div class="small text-muted">Fixed typos in chapter 3</div>
                    </div>

                    <div class="mb-4 position-relative">
                        <div class="position-absolute" style="width: 16px; height: 16px; background: #94a3b8; border-radius: 50%; left: -22px; top: 2px; border: 3px solid white;"></div>
                        <div class="fw-medium small">Version 2.0</div>
                        <div class="small text-muted">Dec 5, 2024</div>
                        <div class="small text-muted">Added new exercises</div>
                    </div>

                    <div class="position-relative">
                        <div class="position-absolute" style="width: 16px; height: 16px; background: #94a3b8; border-radius: 50%; left: -22px; top: 2px; border: 3px solid white;"></div>
                        <div class="fw-medium small">Version 1.0</div>
                        <div class="small text-muted">Nov 28, 2024</div>
                        <div class="small text-muted">Initial upload</div>
                    </div>
                </div>

                <hr class="my-3">
                <a href="#" class="ll-btn ll-btn-outline ll-btn-sm w-100">View Full History</a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="ll-card">
            <div class="ll-card-header">
                <h5 class="ll-card-title">Quick Actions</h5>
            </div>
            <div class="ll-card-body">
                <a href="#" class="d-flex align-items-center gap-3 p-2 border rounded mb-2 text-decoration-none text-dark">
                    <i class="bi bi-arrow-clockwise fs-5 text-primary"></i>
                    <div>
                        <div class="fw-medium small">Restore Previous Version</div>
                        <div class="small text-muted">Revert to an older version</div>
                    </div>
                </a>
                <a href="#" class="d-flex align-items-center gap-3 p-2 border rounded mb-2 text-decoration-none text-dark">
                    <i class="bi bi-file-diff fs-5 text-success"></i>
                    <div>
                        <div class="fw-medium small">Compare Versions</div>
                        <div class="small text-muted">See differences between versions</div>
                    </div>
                </a>
                <a href="#" class="d-flex align-items-center gap-3 p-2 border rounded text-decoration-none text-dark">
                    <i class="bi bi-download fs-5 text-warning"></i>
                    <div>
                        <div class="fw-medium small">Export History</div>
                        <div class="small text-muted">Download version history report</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
