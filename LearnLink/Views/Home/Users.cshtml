<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="ll-form-group">
                    <label class="ll-form-label">Full Name</label>
                    <input type="text" class="ll-form-control" placeholder="Enter full name">
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Email Address</label>
                    <input type="email" class="ll-form-control" placeholder="Enter email address">
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Role</label>
                    <select class="ll-form-control ll-form-select">
                        <option value="">Select role</option>
                        <option>Admin</option>
                        <option>Moderator</option>
                        <option>Contributor</option>
                        <option>User</option>
                    </select>
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Grade/Position</label>
                    <input type="text" class="ll-form-control" placeholder="e.g., Grade 8 - Section A or Math Teacher">
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Temporary Password</label>
                    <input type="password" class="ll-form-control" placeholder="Enter temporary password">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="sendInvite" checked>
                    <label class="form-check-label" for="sendInvite">Send email invitation to user</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="ll-btn ll-btn-outline" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="ll-btn ll-btn-primary">
                    <i class="bi bi-person-plus"></i>
                    Add User
                </button>
            </div>
        </div>
    </div>
</div>
