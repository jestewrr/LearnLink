@{
    ViewData["Title"] = "Knowledge Repository";
    ViewData["ActivePage"] = "Repository";

    var resources = ViewBag.Resources as List<LearnLink.Models.ResourceViewModel> ?? new List<LearnLink.Models.ResourceViewModel>();

    // Map file formats to gradient backgrounds for thumbnails
    string GetThumbnailGradient(string format) => format?.ToUpper() switch
    {
        "PDF" => "background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%)",
        "DOCX" => "background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)",
        "PPTX" => "background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%)",
        "XLSX" => "background: linear-gradient(135deg, #10b981 0%, #059669 100%)",
        _ => "background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)"
    };

    string GetThumbnailIcon(string format) => format?.ToUpper() switch
    {
        "PDF" => "bi-file-earmark-pdf",
        "DOCX" => "bi-file-earmark-word",
        "PPTX" => "bi-file-earmark-ppt",
        "XLSX" => "bi-file-earmark-excel",
        _ => "bi-file-earmark"
    };
}

<!-- Page Header -->
<div class="ll-page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="ll-page-title">Knowledge Repository</h1>
            <div class="ll-breadcrumb">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
                <i class="bi bi-chevron-right small"></i>
                <span>Knowledge Repository</span>
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="ll-btn ll-btn-outline" data-bs-toggle="modal" data-bs-target="#filterModal">
                <i class="bi bi-funnel"></i>
                Filters
            </button>
            <a href="@Url.Action("Upload", "Home")" class="ll-btn ll-btn-primary">
                <i class="bi bi-cloud-arrow-up"></i>
                Upload Resource
            </a>
        </div>
    </div>
</div>

<!-- Search and Filter Bar -->
<div class="ll-card mb-4" id="repoFilters">
    <div class="ll-card-body">
        <div class="row g-3 align-items-center">
            <div class="col-lg-5">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" class="ll-form-control ps-5" id="repoSearchInput" placeholder="Search resources by title, subject, or keyword...">
                </div>
            </div>
            <div class="col-lg-2">
                <select class="ll-form-control ll-form-select" id="subjectFilter">
                    <option value="">All Subjects</option>
                    <option>Mathematics</option>
                    <option>Science</option>
                    <option>English</option>
                    <option>Filipino</option>
                    <option>History</option>
                    <option>MAPEH</option>
                    <option>TLE</option>
                </select>
            </div>
            <div class="col-lg-2">
                <select class="ll-form-control ll-form-select" id="gradeFilter">
                    <option value="">All Grades</option>
                    <option>Grade 7</option>
                    <option>Grade 8</option>
                    <option>Grade 9</option>
                    <option>Grade 10</option>
                </select>
            </div>
            <div class="col-lg-2">
                <select class="ll-form-control ll-form-select" id="typeFilter">
                    <option value="">All Types</option>
                    <option>PDF</option>
                    <option>DOCX</option>
                    <option>PPTX</option>
                    <option>XLSX</option>
                </select>
            </div>
            <div class="col-lg-1">
                <button class="ll-btn ll-btn-primary w-100" id="searchBtn">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Category Filters -->
<div class="d-flex flex-wrap gap-2 mb-4" id="categoryFilters">
    <button class="ll-btn ll-btn-primary ll-btn-sm category-btn active" data-subject="">All Resources</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="Mathematics">üìê Mathematics</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="Science">üî¨ Science</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="English">üìñ English</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="Filipino">üáµüá≠ Filipino</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="History">üèõÔ∏è History</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="MAPEH">üé® MAPEH</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="TLE">üíª TLE</button>
    <button class="ll-btn ll-btn-outline ll-btn-sm category-btn" data-subject="Values Education">üåç Values Ed</button>
</div>

<!-- Results Info -->
<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
    <p class="text-muted mb-0" id="resultsInfo">Showing <strong>@resources.Count</strong> resources</p>
    <div class="d-flex align-items-center gap-2 flex-wrap">
        <span class="text-muted small d-none d-sm-inline">Sort by:</span>
        <select class="ll-form-control ll-form-select" style="width: auto;" id="sortSelect">
            <option value="recent">Most Recent</option>
            <option value="popular">Most Popular</option>
            <option value="downloads">Most Downloaded</option>
            <option value="rating">Highest Rated</option>
            <option value="title">Title A-Z</option>
        </select>
        <div class="btn-group">
            <button class="ll-btn ll-btn-outline ll-btn-sm active" title="Grid View" id="gridViewBtn">
                <i class="bi bi-grid-3x3-gap"></i>
            </button>
            <button class="ll-btn ll-btn-outline ll-btn-sm" title="List View" id="listViewBtn">
                <i class="bi bi-list-ul"></i>
            </button>
        </div>
    </div>
</div>

<!-- Resource Grid -->
<div class="row g-4 mb-4" id="resourceGrid">
    @foreach (var resource in resources)
    {
    <div class="col-sm-6 col-lg-4 col-xl-3 resource-item" data-subject="@resource.Subject" data-grade="@resource.GradeLevel" data-type="@resource.FileFormat" data-title="@resource.Title.ToLower()" data-views="@resource.ViewCount" data-downloads="@resource.DownloadCount" data-rating="@resource.Rating" data-date="@resource.CreatedAt.ToString("yyyy-MM-dd")">
        <div class="ll-resource-card">
            <div class="ll-resource-thumbnail" style="@GetThumbnailGradient(resource.FileFormat)">
                <i class="bi @GetThumbnailIcon(resource.FileFormat)"></i>
                <span class="ll-resource-type">@resource.FileFormat</span>
            </div>
            <div class="ll-resource-content">
                <h5 class="ll-resource-title">@resource.Title</h5>
                <div class="ll-resource-meta">
                    <span><i class="bi bi-download"></i> @resource.DownloadCount.ToString("N0")</span>
                    <span><i class="bi bi-eye"></i> @resource.ViewCount.ToString("N0")</span>
                    @if (resource.Rating > 0)
                    {
                    <span><i class="bi bi-star-fill text-warning"></i> @resource.Rating.ToString("0.0")</span>
                    }
                </div>
                <div class="ll-resource-tags">
                    <span class="ll-tag">@resource.Subject</span>
                    <span class="ll-tag">@resource.GradeLevel</span>
                    <span class="ll-tag">@resource.ResourceType</span>
                </div>
            </div>
        </div>
    </div>
    }
</div>

<!-- No Results Message -->
<div class="text-center py-5 d-none" id="noResults">
    <i class="bi bi-search fs-1 text-muted"></i>
    <h5 class="mt-3">No resources found</h5>
    <p class="text-muted">Try adjusting your search or filter criteria.</p>
</div>

<!-- Pagination -->
<nav aria-label="Resource pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1"><i class="bi bi-chevron-left"></i></a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
        </li>
    </ul>
</nav>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advanced Filters</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="ll-form-group">
                    <label class="ll-form-label">Date Range</label>
                    <div class="row g-2">
                        <div class="col-6">
                            <input type="date" class="ll-form-control">
                        </div>
                        <div class="col-6">
                            <input type="date" class="ll-form-control">
                        </div>
                    </div>
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Contributor</label>
                    <select class="ll-form-control ll-form-select">
                        <option value="">All Contributors</option>
                        <option>Maria Santos</option>
                        <option>John Reyes</option>
                        <option>Ana Cruz</option>
                    </select>
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">Minimum Rating</label>
                    <select class="ll-form-control ll-form-select">
                        <option value="">Any Rating</option>
                        <option>4 stars &amp; above</option>
                        <option>3 stars &amp; above</option>
                        <option>2 stars &amp; above</option>
                    </select>
                </div>
                <div class="ll-form-group">
                    <label class="ll-form-label">File Size</label>
                    <select class="ll-form-control ll-form-select">
                        <option value="">Any Size</option>
                        <option>Less than 1 MB</option>
                        <option>1 MB - 5 MB</option>
                        <option>5 MB - 10 MB</option>
                        <option>More than 10 MB</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="ll-btn ll-btn-outline" data-bs-dismiss="modal">Reset</button>
                <button type="button" class="ll-btn ll-btn-primary" data-bs-dismiss="modal">Apply Filters</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    (function() {
        const searchInput = document.getElementById('repoSearchInput');
        const subjectFilter = document.getElementById('subjectFilter');
        const gradeFilter = document.getElementById('gradeFilter');
        const typeFilter = document.getElementById('typeFilter');
        const sortSelect = document.getElementById('sortSelect');
        const resourceItems = document.querySelectorAll('.resource-item');
        const noResults = document.getElementById('noResults');
        const resourceGrid = document.getElementById('resourceGrid');
        const resultsInfo = document.getElementById('resultsInfo');
        const categoryBtns = document.querySelectorAll('.category-btn');

        function filterResources() {
            const query = searchInput.value.toLowerCase();
            const subject = subjectFilter.value;
            const grade = gradeFilter.value;
            const type = typeFilter.value;
            let visibleCount = 0;

            resourceItems.forEach(item => {
                const matchSearch = !query || item.dataset.title.includes(query) || item.dataset.subject.toLowerCase().includes(query);
                const matchSubject = !subject || item.dataset.subject === subject;
                const matchGrade = !grade || item.dataset.grade === grade;
                const matchType = !type || item.dataset.type === type;

                if (matchSearch && matchSubject && matchGrade && matchType) {
                    item.classList.remove('d-none');
                    visibleCount++;
                } else {
                    item.classList.add('d-none');
                }
            });

            noResults.classList.toggle('d-none', visibleCount > 0);
            resourceGrid.classList.toggle('d-none', visibleCount === 0);
            resultsInfo.innerHTML = 'Showing <strong>' + visibleCount + '</strong> resources';
        }

        function sortResources() {
            const sorted = Array.from(resourceItems).sort((a, b) => {
                switch (sortSelect.value) {
                    case 'popular': return parseInt(b.dataset.views) - parseInt(a.dataset.views);
                    case 'downloads': return parseInt(b.dataset.downloads) - parseInt(a.dataset.downloads);
                    case 'rating': return parseFloat(b.dataset.rating) - parseFloat(a.dataset.rating);
                    case 'title': return a.dataset.title.localeCompare(b.dataset.title);
                    default: return b.dataset.date.localeCompare(a.dataset.date);
                }
            });
            sorted.forEach(item => resourceGrid.appendChild(item));
        }

        // Event listeners
        searchInput.addEventListener('input', filterResources);
        subjectFilter.addEventListener('change', filterResources);
        gradeFilter.addEventListener('change', filterResources);
        typeFilter.addEventListener('change', filterResources);
        sortSelect.addEventListener('change', () => { sortResources(); filterResources(); });

        // Category button clicks
        categoryBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                categoryBtns.forEach(b => { b.classList.remove('ll-btn-primary', 'active'); b.classList.add('ll-btn-outline'); });
                this.classList.remove('ll-btn-outline');
                this.classList.add('ll-btn-primary', 'active');
                subjectFilter.value = this.dataset.subject;
                filterResources();
            });
        });

        // Grid/List view toggle
        document.getElementById('gridViewBtn').addEventListener('click', function() {
            this.classList.add('active');
            document.getElementById('listViewBtn').classList.remove('active');
            resourceItems.forEach(item => { item.className = item.className.replace(/col-sm-\d+\s*col-lg-\d+\s*col-xl-\d+/, 'col-sm-6 col-lg-4 col-xl-3'); });
        });
        document.getElementById('listViewBtn').addEventListener('click', function() {
            this.classList.add('active');
            document.getElementById('gridViewBtn').classList.remove('active');
            resourceItems.forEach(item => { item.className = item.className.replace(/col-sm-\d+\s*col-lg-\d+\s*col-xl-\d+/, 'col-sm-12 col-lg-12 col-xl-12'); });
        });
    })();
</script>
}
